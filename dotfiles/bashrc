#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

HISTSIZE=1000
HISTFILESIZE=2000

######### Prompt ###########
# Use git prompt

#Rocky/RHEL:
source /usr/share/git-core/contrib/completion/git-prompt.sh

PS1='\[\e[1;32m\]\u@\h \[\e[1;34m\]\w \[\e[1;33m\]$(__git_ps1 " (ðŸŒ¿ %s)") \[\e[1;35m\]\A \[\e[0;37m\]
\$ \[\e[0m\]'


# Shell options
shopt -s checkwinsize
shopt -s histappend
shopt -s autocd
shopt -s extglob
shopt -s nocasematch
shopt -s globstar
shopt -s nocaseglob

# alias ls='ls --color=auto'
alias ls="ls $LS_OPTIONS"
alias grep="grep --colour=auto"
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ll='ls -l'
alias la='ls -A'
#alias l='ls -CF'
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias gits='git status'
alias gitc='git checkout'
alias k='kubectl --insecure-skip-tls-verify'

export PATH=$HOME/bin:/sbin:/usr/local/sbin:$PATH
export EDITOR=vim
export PROXYCHAINS_CONF_FILE=~/.proxychains.conf

# make package searching easier on Slackware.
lsp ()
{
    ls -1 "/var/log/packages/$@"* |xargs -i basename {}
}

